<h1>Cars for Sale</h1>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
  <% @cars.each do |car| %>
    <tr>
      <td><%= car.year %></td>
      <td><%= car.make %></td>
      <td><%= car.model %></td>
      <td><%= car.price %></td>
      <td><%= link_to 'Show', car %></td>
      <td><%= link_to 'Edit', edit_car_path(car), id: dom_id(car, 'edit')%></td>
      <td><%= link_to 'Destroy', car, method: :delete, data: {confirm: 'Are you sure about that?'}, id: dom_id(car, 'destroy') %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path %>
